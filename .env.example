# Database
DB_USER=cicd_user
DB_PASSWORD=secure_password

# LLM Configuration
LLM_PROVIDER=bedrock  # Options: bedrock, anthropic
MODEL_ID=anthropic.claude-3-5-sonnet-20241022

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here  # Optional for temporary credentials
AWS_REGION=us-east-1

# Anthropic Configuration (if using anthropic provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitLab Configuration
GITLAB_URL=http://gitlab.example.com
GITLAB_TOKEN=your_gitlab_token_here

# SonarQube Configuration
SONAR_HOST_URL=http://sonarqube.example.com
SONAR_TOKEN=your_sonarqube_token_here

# Application Settings
SESSION_TIMEOUT_HOURS=4
MAX_TOKENS_PER_SESSION=50000
LOG_LEVEL=INFO

# GitLab Webhook Token (optional but recommended for production)
GITLAB_WEBHOOK_TOKEN=your_webhook_secret_here